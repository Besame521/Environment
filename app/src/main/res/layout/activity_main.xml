<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--主页-->
    <include
        android:id="@+id/main"
        layout="@layout/activity_main1" />
    <!--定位-->
    <include
        android:id="@+id/main2"
        android:visibility="gone"
        layout="@layout/activity_main2"/>
    <!--我的-->
    <include
        android:id="@+id/main3"
        android:visibility="gone"
        layout="@layout/activity_main3"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background" />
    <!--<include-->
        <!--layout="@layout/bottom_menu"/>-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="12"
        android:elevation="2dp"
        android:layout_margin="10dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/navigation_home"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:src="@drawable/home"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="首页"
                android:textSize="10sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/navigation_home2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:src="@drawable/home_2"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="首页"
                android:textColor="@color/background"
                android:textSize="10sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navigation_localtion"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:layout_width="40dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:src="@drawable/localtion"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="定位"
                android:textSize="10sp"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/navigation_localtion2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone">
            <ImageView
                android:layout_width="40dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:src="@drawable/localtion_2"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="定位"
                android:textSize="10sp"
                android:textColor="@color/background"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navigation_my"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:layout_width="40dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:src="@drawable/my"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="我的"
                android:textSize="10sp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navigation_my2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone">
            <ImageView
                android:layout_width="40dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:src="@drawable/my_2"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="我的"
                android:textSize="10sp"
                android:textColor="@color/background"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>