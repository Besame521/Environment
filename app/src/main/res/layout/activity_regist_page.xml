<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#e6e6e6"
    android:layout_height="match_parent"
    tools:context=".RegisterPage" >

    <include
        android:id="@+id/register_title"
        layout="@layout/title_register_layout" />
    <include
        android:id="@+id/register_layout_progress"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="130dip"
        layout="@layout/layout_progress"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >
        <include
            android:id="@+id/register_input_layout"
            android:layout_width="match_parent"
            android:layout_height="195dip"
            layout="@layout/register_input_layout" />
        <Button
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/register_input_layout"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dip"
            android:background="@drawable/button"
            android:gravity="center"
            android:paddingBottom="2dip"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingTop="2dip"
            android:text="注册"
            android:textColor="@color/background"
            android:textSize="20sp" />
    </RelativeLayout>

</RelativeLayout>